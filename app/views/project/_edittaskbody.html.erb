<%= form_with(model: @tasks, remote: true)  do |f| %>
<div class="modal-body">


    <div class="form-group">

        <%= f.label :task %>
        <%= f.text_field :task, class: "form-control" %>

    </div>


    <div class="form-group">
        <%= f.label :deadline %>
        <%= select_datetime Date.today, prefix: :deadline , class: "form-control"%>

    </div>



</div>
<div class="modal-footer">
    <button type="button" id="closeedittask" class="btn modal-close btn-secondary" data-dismiss="modal">Close</button>
    <%= f.submit :Save ,  class: "btn btn-primary" %>

</div>
<%end%>