<div id="notice" class="m-3"><%= bootstrap_flash %></div>

<%= render 'form', attachment: @attachment %>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>File</th>
            <th colspan="2" class="text-center">Action</th>
        </tr>
    </thead>

    <tbody>
        <% @attachments.each do |attachment| %>
        <tr>
            <td><%= attachment.name %></td>
            <td><%= attachment.file %></td>

            <td><%= link_to 'Download',  "#{attachment.file}", download: '' %></td>
            <td><%= link_to 'Delete', attachment, method: :delete, remote: true, data: { confirm: "Are you sure you want to delete file: #{attachment.name}?" }, class: "btn btn-danger"  %></td>
        </tr>
        <% end %>
        <% if @attachments.empty? %>
        <tr>
            <td colspan="5">No attachments.</td>
        </tr>
        <%end %>
    </tbody>
</table>

<br>