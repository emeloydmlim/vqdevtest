<!DOCTYPE html>
<html>

<head>
    <title>Vqdevtest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <h3 class="my-0 mr-md-auto font-weight-normal" style="color: #428bca;">Visitor Queue Test</h3>
        <nav class="my-2 my-md-0 mr-md-3">

            <% if current_user %>


            <%= link_to "Projects", project_index_path %>
            <% end %>

        </nav>

        <% if current_user %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
        <% else %>
        <%= link_to "Sign In", new_user_session_path , class: "btn m-2 btn-primary " %>
        <%= link_to  "Sign Up", new_user_registration_path , class: "btn m-2 btn-primary"%>

        <% end %>
    </div>


    <main role="main" class="container">
        <%= bootstrap_flash %>
        <%= yield %>
    </main><!-- /.container -->

    <footer class="footer">
        <div class="container">
            <span class="text-muted">&copy; Company 2020</span>
        </div>
    </footer>
</body>

</html>